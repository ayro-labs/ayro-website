{
  "rules": {
    "no-console": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "space-before-function-paren": false,
    "max-line-length": [true, "999"],
    "object-curly-spacing": [true, "never"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-snake-case", "allow-pascal-case"],
    "align": [true, "elements", "members", "parameters", "statements"],
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }],
    // Angular rules
    "angular-whitespace": [true, "check-interpolation", "check-semicolon"],
    "banana-in-box": true,
    "templates-no-negated-async": true,
    "directive-selector": [true, "attribute", "ayro", "camelCase"],
    "component-selector": [true, "element", "ayro", "kebab-case"],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "use-view-encapsulation": true,
    "no-attribute-parameter-decorator": true,
    "no-output-named-after-standard-event": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-output-on-prefix": true,
    "no-forward-ref": true,
    "no-unused-css": true,
    "use-life-cycle-interface": true,
    "contextual-life-cycle": true,
    "trackBy-function": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "pipe-impure": true,
    "i18n": false,
    "template-cyclomatic-complexity": false,
    "template-conditional-complexity": false
  },
  "rulesDirectory": [
    "./node_modules/codelyzer"
  ],
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules",
    "tslint-config-airbnb",
    "tslint-angular"
  ]
}