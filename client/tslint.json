{
  "rulesDirectory": [
    "../node_modules/codelyzer"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "space-before-function-paren": false,
    "max-line-length": [true, "999"],
    "object-curly-spacing": [true, "never"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-snake-case",
      "allow-pascal-case"
    ],
    "align": [
      true,
      "elements",
      "members",
      "parameters",
      "statements"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  },
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules",
    "tslint-config-airbnb"
  ]
}